<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--Text Views-->
    <style name="base_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_alternates</item>
    </style>

    <!--Estilos de texto según su tamaño-->
    <style name="tv_h8" parent="base_text">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="tv_h7" parent="base_text">
        <item name="android:textSize">@dimen/mini_text</item>

    </style>

    <style name="tv_h6" parent="base_text">
        <item name="android:textSize">@dimen/tinny_text</item>

    </style>

    <style name="tv_h5" parent="base_text">
        <item name="android:textSize">@dimen/small_text</item>

    </style>

    <style name="tv_h4" parent="base_text">
        <item name="android:textSize">@dimen/medium_text</item>

    </style>

    <style name="tv_h3" parent="base_text">
        <item name="android:textSize">@dimen/big_text</item>

    </style>

    <style name="tv_h2" parent="base_text">
        <item name="android:textSize">@dimen/giant_text</item>

    </style>

    <style name="tv_h1" parent="base_text">
        <item name="android:textSize">@dimen/max_text</item>
    </style>

    <!--Images-->
    <style name="img_small" parent="@android:style/Widget.ImageButton">
        <item name="android:width">@dimen/tinny_image</item>
        <item name="android:height">@dimen/tinny_image</item>

    </style>

    <!-- Card View -->
    <style name="card_view_1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="elevation">50dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="layout_constraintWidth_percent">0.9</item>
    </style>

    <style name="cvLogout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="elevation">7dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>


</resources>
